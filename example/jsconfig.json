{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "hooks/*": ["hooks/*"],
      "utils/*": ["utils/*"],
      "graphql/*": ["graphql/*"],
      "apollo/*": ["apollo/*"],
      "styles/*": ["styles/*"]
    }
  },
  "include": ["**/*.js", "**/*.jsx"]
}
